= render 'shared/errors', resource: @answer

=render(partial: 'shared/manage_question_links', locals: { question: @question }) if @question.user == current_user
h4= @question.title
p= @question.body
p Answers
p= render @question.reload.answers
p Your answer
= form_with model: @answer, url: question_answers_path(@question), local: true do |f|
  = f.label :body
  = f.text_area :body
  = f.submit 'Leave'
